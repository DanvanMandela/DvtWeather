<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/currentItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimens_10dp"
    android:layout_marginTop="@dimen/dimens_10dp"
    app:cardCornerRadius="0dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimens_5dp"
        android:paddingHorizontal="@dimen/dimens_5dp"
        android:paddingVertical="@dimen/dimens_10dp">

        <TextView
            android:id="@+id/placeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/placeTemp"
            android:fontFamily="@font/montserrat_medium"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            tools:text="WestLands" />

        <TextView
            android:id="@+id/placeTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/montserrat_semi_bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            tools:text="18\u00B0" />


        <TextView
            android:id="@+id/countryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/placeName"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/montserrat_medium"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            tools:text="Kenya" />

        <TextView
            android:id="@+id/timeDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/countryName"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/weatherType"
            android:fontFamily="@font/montserrat_light"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            tools:text="Tue,Feb 2 11:15 AM" />

        <TextView
            android:id="@+id/weatherType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/countryName"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/montserrat_light"
            android:textAllCaps="false"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            tools:text="Sunny" />
    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>